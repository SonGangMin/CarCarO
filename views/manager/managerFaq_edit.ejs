<%- include('../include/managerhead.ejs') %>

<div class="faqedit">
<label>
    <input type="checkbox" id="regist" value="2"/>자주 묻는 질문
</label>

<h1>게시글 수정하기</h1>

<form action="/manager/managerFaq/<%= faq.number %>" method="post">
    <input type="hidden" name="_method" value="PUT" />
    <div>
        <label for="title">제목</label>
        <input
        type="text"
        id="title"
        name="title"
        value="<%= faq.title %>"
        required
    />
    </div>
    <div>
        <label for="content">내용</label>
        <textarea id="content" name="content" rows="10" required>
<%= faq.content %></textarea>
    </div>
    <button type="submit">수정하기</button>
</form>

<button onclick="location.href='/manager/managerFaq/<%= faq.id %>'">돌아가기</button  >
</div>